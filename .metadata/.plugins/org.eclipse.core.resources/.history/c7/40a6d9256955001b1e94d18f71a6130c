import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Savepoint;
import java.sql.Statement;
import java.util.Scanner;

public class q3 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		PreparedStatement ps;
		Statement st;
		ResultSet rs;
		Connection con;
		try {
			con = DriverManager.getConnection("jdbc:mysql://localhost:3306/mydb", "root", "");
			con.setAutoCommit(false);
			if(!con.isClosed()) {
				System.out.println("Connected to DB");
			} else {
				System.out.println("Couldn't connect to DB");
			}
			while(true) {
				System.out.println("Enter 1.Create Acc, 2.Display Acc details, 3.Transact Else.Exit");
				int opt  = sc.nextInt();
				int f = 0;
				switch(opt) {
					case 1:
						System.out.print("Enter id: ");
						int id = sc.nextInt();
						System.out.print("Enter Name: ");
						String name = sc.next();
						System.out.print("Enter balance: ");
						int balance = sc.nextInt();
						String query = "INSERT INTO `Bank`(`user_id`, `name`, `balance`) VALUES (?,?,?)";
						
						ps = con.prepareStatement(query);
						ps.setInt(1, id);
						ps.setString(2, name);
						ps.setInt(3, balance);
						ps.execute();
						con.commit();
						
						break;
					case 2:
						System.out.println("ID, Name, Balance ");
						st = con.createStatement();
						rs = st.executeQuery("SELECT * FROM `Bank` WHERE 1");
						while(rs.next()) {
							System.out.println(rs.getInt(1) + " " + rs.getString(2) + " " + rs.getInt(3));
						}
						break;
					case 3:
						System.out.print("Transact, please enter your id");
						id = sc.nextInt();
						System.out.print("Enter 1.withdraw 2.deposit 3.displayDetails else.main menu");
						int temp = sc.nextInt();
						switch(temp) {
							case 1:
								Savepoint sp1 = con.setSavepoint();
								System.out.print("Enter amount to withdraw: ");
								int amt = sc.nextInt();
								query = "select Balance from Bank where user_id = " + id;
								st = con.createStatement();
								rs = st.executeQuery(query);
								int bal = 0;
								while(rs.next()) {
									bal = rs.getInt(1);
								}
								bal -= amt;
								System.out.println(bal);
								query = "update Bank set Balance = " + bal + " where user_id = " + id;
								st.executeUpdate(query);
								if(bal < 0) {
									System.out.println("Lower than ur bal!");
									con.rollback(sp1);
								}
								con.releaseSavepoint(sp1);
								con.commit();
								System.out.println("Withdraw succ");
								
								 break;
							case 2:
								Savepoint sp = con.setSavepoint();
								System.out.println("Enter amount to deposit: ");
								amt = sc.nextInt();
								query = "select Balance from Bank where user_id = " + id;
								st = con.createStatement();
								rs = st.executeQuery(query);
								bal = 0;
								while(rs.next()) {
									bal = rs.getInt(1);
								}
								int b=bal;
								bal += amt;
								System.out.println(bal);
								query = "update Bank set Balance = " + bal + " where user_id = " + id;
								st.executeUpdate(query);
								if(bal<b)
									con.rollback();
								con.releaseSavepoint(sp);
								con.commit();
								System.out.println("Deposit succ");							
								 break;
							case 3:
								query = "select * from Bank where user_id = " + id;
								st = con.createStatement();
								rs = st.executeQuery(query);
								while(rs.next()) {
									System.out.println("ID = " + rs.getInt(1) + ", Name = " + rs.getString(2) + ", Balance = " + rs.getInt(3));
								}
								 break;
							default:
								 break;
								 
						}
						
						
						break;
					default:
						f = 1;
						break;
					
				}
				if(f == 1) {
					System.out.println("Transaction closed!");
					sc.close();
					break;
				}
			}	
			
		} catch(Exception e) {
			e.printStackTrace();
		}
	}

}